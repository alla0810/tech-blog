<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="col-md-12">
  <div class="card">
    <div class = "card-header display-flex justify-space-between">
      <div class = "font-title">{{post.title}}</div>
      <div class = "font-date">Posted by {{user.name}} on {{format_date date_created}}</div>
    </div>

  <p class = "card-body">{{post.description}}</p>
  </div>
</div>
<br>
{{/each}}